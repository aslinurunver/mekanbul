extends layout 
include fonksiyonlar/yildiz
block content 
    .row.page-header 
        .col-lg-12 
            h1 #{mekanDetay.ad} 
    .row 
        .col-xs-12.col-md-12 
            .row
                .col-xs-12.col-sm-6
                    p.rating 
                        +puanOlustur(mekanDetay.puan)
                    p #{mekanDetay.adres}
                    .panel.panel-primary 
                        .panel-heading 
                            h2.panel-title Açılış Saatleri 
                        .panel-body 
                        each saat in mekanDetay.saatler 
                            p 
                                | #{saat.gunler}:&nbsp;
                                if (saat.kapali)
                                    | Kapalı
                                else 
                                    | #{saat.acilis}-#{saat.kapanis}
                    .panel.panel-primary 
                        .panel-heading 
                            h2.panel-title Neler Var?
                        .panel-body 
                            each imkan in mekanDetay.imkanlar
                                span.label.label-warning= imkan
                                | &nbsp;
                .col-xs-12.col-sm-6             
                    .panel.panel-primary 
                        .panel-heading 
                            h2.panel-title Konum Bilgisi 
                        .panel-body 
                            -var enlem=mekanDetay.koordinatlar.enlem 
                            -var boylam=mekanDetay.koordinatlar.boylam
                            img.img-responsive.img-rounded(src='http://maps.googleapis.com/maps/api/staticmap?center='+enlem+','+boylam+'&zoom=12&size=600x400&markers='+enlem+','+boylam+'&key=AIzaSyCmmKygTpBzHGOZEciJpAdxC9v_tWHagnE')
    .row 
        .col-xs-12 
            .panel.panel-primary
                .panel-heading
                    a.btn.btn-default.pull-right(href='/mekan/yorum/yeni') Yorum Ekle
                    h2.panel-title Müşteri Yorumları
                .panel-body.review-container
                    .row 
                        .review 
                            .well.well-sm.review-header
                                span.rating 
                                span.review-author Kahve Müptelası
                                small.reviewTimestamp &nbsp; 1 Ekim 2022
                                span.rating 
                                span.glyphicon.glyphicon-star
                                span.glyphicon.glyphicon-star
                                span.glyphicon.glyphicon-star
                                span.glyphicon.glyphicon-star-empty
                                span.glyphicon.glyphicon-star-empty
                            .col-xs-12 
                                p Kahveler damak zevkime uygun değildi.
    .row 
        .col-xs-12 
            .panel.panel-primary
                .panel-heading
                    a.btn.btn-default.pull-right(href='/mekan/yorum/yeni') Yorum Ekle
                    h2.panel-title Müşteri Yorumları
                .panel-body.review-container
                    .row 
                        .review 
                            .well.well-sm.review-header
                                span.review-author Ahmet Yılmaz
                                small.reviewTimestamp &nbsp; 9 Ekim 2022
                                | &nbsp;
                                span.rating
                                span.glyphicon.glyphicon-star
                                span.glyphicon.glyphicon-star
                                span.glyphicon.glyphicon-star
                                span.glyphicon.glyphicon-star
                                span.glyphicon.glyphicon-star
                            .col-xs-12 
